{
  "id": "name.ricardoismy.sonybraviaandroidtv",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Sony BRAVIA Android TV"
  },
  "description": {
    "en": "Adds support for Sony BRAVIA Android TV's."
  },
  "category": [
    "video"
  ],
  "permissions": [
    "homey:manager:speech-input",
    "homey:manager:speech-output"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Ricardo Snoek",
    "email": "me@ricardoismy.name"
  },
  "contributors": {
    "developers": [
      {
        "name": "Jorden Chamid",
        "email": "info@chamidmedia.nl"
      },
      {
        "name": "Marco Frijmann",
        "email": "info@frijmann.nl"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "me@ricardoismy.name"
      }
    }
  },
  "drivers": [
    {
      "id": "sony-bravia-android-tv",
      "name": {
        "en": "Sony BRAVIA Android TV"
      },
      "images": {
        "large": "drivers/sony-bravia-android-tv/assets/images/SBATVL.jpg",
        "small": "drivers/sony-bravia-android-tv/assets/images/SBATVS.jpg"
      },
      "class": "tv",
      "capabilities": [
        "onoff",
        "channel_up",
        "channel_down",
        "volume_up",
        "volume_down",
        "volume_mute"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "options": {
            "singular": true
          },
          "navigation": {
            "next": "preshared_key"
          }
        },
        {
          "id": "preshared_key"
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings",
            "nl": "Algemene instellingen"
          },
          "children": [
            {
              "id": "ip",
              "type": "text",
              "label": {
                "en": "IP address",
                "nl": "IP adres"
              },
              "value": "0.0.0.0"
            },
            {
              "id": "psk",
              "type": "password",
              "label": {
                "en": "Pre-shared key",
                "nl": "Pre-shared key"
              },
              "value": ""
            },
            {
              "id": "polling",
              "type": "number",
              "label": {
                "en": "Device polling in minutes",
                "nl": "Apparaat pollen in minuten"
              },
              "value": 5,
              "min": 1,
              "max": 10,
              "hint": {
                "en": "Lowering this value improves automation responses when regular remote is used, but also increases load on your Homey."
              }
            },
            {
              "id": "macAddress",
              "type": "text",
              "label": {
                "en": "MAC address",
                "nl": "MAC adres"
              },
              "value": "00:00:00:00:00:00"
            },
            {
              "id": "useWOL",
              "type": "checkbox",
              "label": {
                "en": "Enable Wake-on-LAN",
                "nl": "Gebruik Wake-on-LAN"
              },
              "value": false
            }
          ]
        }
      ]
    }
  ],
